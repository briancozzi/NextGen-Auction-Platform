@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Http
@using NextGen.BiddingPlatform.Configuration
@using Microsoft.Extensions.Configuration
@inject IWebHostEnvironment env
@inject IHttpContextAccessor _context
@{
    var appConfiguration = env.GetAppConfiguration();
    var apiServerPath = ConfigurationBinder.GetValue<string>(appConfiguration, "App:ApiWebSiteRootAddress", string.Empty);
    var webSitePath = ConfigurationBinder.GetValue<string>(appConfiguration, "App:WebSiteRootAddress", string.Empty);
}

<div class="inner-wrapper">
    <div class="content-wrapper">
        <div class="container position-relative current-bids">
            <nav class="navbar navbar-expand-sm navbar-light bg-light">
                <span class="active-text"></span>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link text-uppercase" href="#">Current Bids</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-controller="Home" asp-action="WatchList">Watch List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-controller="Home" asp-action="RecentlyViewed">Recently Viewed</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div id="usersBidAuctionItems"></div>
            <div class="empty-img empty-view" style="display:none;">
                <img src="~/Common/Images/empety-current-view.png" />
                <div>
                    <span class="headingSmall"><b>No Current Bids</b></span>
                    <span class="paraLine"><span class="clickred">Click here</span> to start bidding on items</span>
                </div>
            </div>

        </div>
    </div>
</div>
<script id="userAuctionItemBidTemplate" type="x-tmpl-mustache">
        <div id="current-bid-section">
                <div class="row mt-20 position-relative" style="margin-left:0; margin-right:0px;">
                    <div class="col-md-3">
                        <img src="{{imageName}}" style="max-width:100%" />
                        <div class="abs-item-id">{{itemNumber}}</div>
                    </div>
                    <div class="col-md-9">
                        <div class="item-section">
                            <h5 class="item-title">{{itemName}}</h5>
                            <div class="timmer-section"><img src="/Common/Images/timer.png" style="width:18px;" />  <span data-itemId="{{auctionItemId}}"></span></div>
                            <div class="bidding-info row">
                                <div class="col-md-5 winning-section">
                                    <span>Current Bid:</span>
                                    <h5 class="winning-amt">${{lastBidAmount}}</h5>
                                </div>
                                <div class="col-md-7 winning-btn-section">
                                    {{#isLastBidByCurrentUser}}
                                    <div class="winning-right-btn">Winning</div>
                                    <button class="btn btn-primary" style="text-transform:uppercase;max-width:200px;" id="btnViewItemDetail" data-url="{{url}}">View Details</button>
                                    {{/isLastBidByCurrentUser}}
                                    {{^isLastBidByCurrentUser}}
                                    <div class="winning-right-btn red">outbid</div>
                                    <button class="btn btn-primary" style="text-transform:uppercase;max-width:200px;" id="btnViewItemDetail" data-url="{{url}}">Bid Again</button>
                                    {{/isLastBidByCurrentUser}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</script>
@section Scripts{

    <script>
        $("li.myActivity").addClass("active");
        var ApiServerPath = "@apiServerPath";
        var WebSiteUrl = "@webSitePath";
        var userId = '@ViewBag.UserId';
        var connectionHub;
        var route = ApiServerPath + "/api/services/app/AuctionItem/GetUsersBiddingHistory?userId=" + userId;
        $(function () {
            loadUserBiddingHistory();
        var activeText = $("li.nav-item.active").text();
            $(".active-text").text(activeText);
            $(document).on("click", "#btnViewItemDetail", function (e) {
                e.preventDefault();

                location.href = $(this).attr("data-url");
            });


            if (userId !== "") {
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl("/signalr-BidHub")
                    .build();

                connection.start().then(function () {
                    connection
                        .invoke("StoreCurrentBidConnections")
                        .catch(err => console.log(err.toString()));

                }).catch(err => console.error(err.toString()));

                connection.on("UpdateCurrentUserBids", () => {

                    loadUserBiddingHistory();
                });
            }
        });


        function loadUserBiddingHistory() {
            if (userId !== "") {
                $.getJSON(route, "", function (response) {

                if (response.result !== null) {
                    $("#usersBidAuctionItems").empty();
                    if (response.result.length == 0) {
                        $(".empty-img.empty-view").show();
                    }
                    $.each(response.result, function (i, v) {
                        if (!v.isAuctionExpired) {
                            if (v.imageName != null) {
                                v.imageName = ApiServerPath + v.imageName;
                            }
                            else {
                                v.imageName = WebSiteUrl + "/auction/images/no-img.png";
                            }

                                if (v.isClosedItemStatus) {
                                    v.url = "/Home/ProductDetailClosedWithLogin?id=" + v.auctionItemId + "&itemStatus=" + v.itemStatus;
                                }
                                else {
                                    v.url = "/Home/ProductDetailWithLogin?id=" + v.auctionItemId + "&itemStatus=" + v.itemStatus;
                                }

                                var output = Mustache.render($("#userAuctionItemBidTemplate").html(), v);
                                $("#usersBidAuctionItems").append(output);


                                var endDate = new Date(Date.parse(v.auctionEndDateTime));

                                if (parseInt(v.remainingDays) > 0) {
                                    $('span[data-itemId="' + v.auctionItemId + '"]').countdown({
                                        until: endDate,
                                        layout: ' {dn} {dl}  '
                                    });
                                }
                                else {
                                    $('span[data-itemId="' + v.auctionItemId + '"]').countdown({
                                        until: endDate,
                                        layout: ' {hn} {hl} {mn} {ml} {sn} {sl} '
                                    });
                                }
                            }
                        });
                    }
                    else {
                        alert("Error occured!!");
                    }
                });
            }
        }
    </script>
    <script src="~/signalr.js"></script>
}
